{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["materialize-css"],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*.js", "vite.config.js"],
  "exclude": ["node_modules", "venv", "staticfiles", "**/*.min.js"]
}
