{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Development Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/apps/backend/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true,
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings.development"
      },
      "preLaunchTask": "Vite Dev Server"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome: Debug Frontend",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/apps/frontend/src"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        "Django: Development Server",
        "Chrome: Debug Frontend"
      ],
      "stopAll": true
    }
  ]
}
